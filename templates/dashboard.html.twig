{% extends "base.html.twig" %}

{% block content %}
<div class="row mb-4">
    <div class="col">
        <h1 class="h2 mb-0">
            <i class="bi bi-speedometer2 me-2"></i>
            Tableau de bord
        </h1>
        <p class="text-muted mb-0">Gestion des présences et examens</p>
    </div>
</div>

<!-- Date Filter and Export -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label for="date" class="form-label fw-semibold">Date :</label>
                    </div>
                    <div class="col-auto">
                        <input type="date" 
                               id="date" 
                               name="date" 
                               value="{{ date }}" 
                               class="form-control">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-1"></i>
                            Afficher
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <a href="/export/csv?date={{ date }}" class="btn btn-success w-100">
                    <i class="bi bi-download me-2"></i>
                    Exporter CSV ({{ date }})
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Sessions Overview -->
<div class="row mb-4">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar-check me-2"></i>
                    Présences par session ({{ date }})
                </h5>
            </div>
            <div class="card-body p-0">
                {% if sessions|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Heure</th>
                                <th>Classe</th>
                                <th>Cours</th>
                                <th>Type</th>
                                <th>Inscrits</th>
                                <th>Présents</th>
                                <th>Retards</th>
                                <th>Total scans</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for session in sessions %}
                            <tr>
                                <td>
                                    <strong>{{ session.start_time }}</strong>
                                    {% if session.end_time %}
                                        - {{ session.end_time }}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if session.class_name %}
                                        <span class="badge bg-info">{{ session.class_name }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>{{ session.course_name }}</td>
                                <td>
                                    {% if session.is_exam %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-file-earmark-text me-1"></i>
                                            Examen
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">Cours</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">{{ session.enrolled_count|default(0) }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">{{ session.present_count|default(0) }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">{{ session.late_count|default(0) }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ session.scanned_count|default(0) }}</span>
                                </td>
                                <td>
                                    <a href="/export/csv?session_id={{ session.id }}" 
                                       class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-download me-1"></i>
                                        CSV
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3 mb-0">Aucune session programmée pour cette date.</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Payments -->
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-credit-card me-2"></i>
                    Paiements récents
                </h5>
            </div>
            <div class="card-body p-0">
                {% if payments|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th>Étudiant</th>
                                <th>Type</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for payment in payments %}
                            <tr>
                                <td>{{ payment.first_name }} {{ payment.last_name }}</td>
                                <td>
                                    <span class="badge bg-secondary">{{ payment.type }}</span>
                                </td>
                                <td>
                                    <strong>{{ payment.amount|number_format(2) }}</strong>
                                    <small class="text-muted">{{ payment.currency|default('EUR') }}</small>
                                </td>
                                <td>
                                    {% set status_class = payment.status == 'paid' ? 'success' : 'warning' %}
                                    <span class="badge bg-{{ status_class }}">{{ payment.status }}</span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        {% if payment.paid_at %}
                                            {{ payment.paid_at|date('d/m/Y H:i') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </small>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="bi bi-credit-card text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2 mb-0">Aucun paiement récent.</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Recent Exam Authorizations -->
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-shield-check me-2"></i>
                    Autorisations d'examen
                </h5>
            </div>
            <div class="card-body p-0">
                {% if authorizations|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th>Étudiant</th>
                                <th>Examen</th>
                                <th>Autorisé</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for auth in authorizations %}
                            <tr>
                                <td>{{ auth.first_name }} {{ auth.last_name }}</td>
                                <td>{{ auth.exam_name }}</td>
                                <td>
                                    {% if auth.allowed %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>
                                            Oui
                                        </span>
                                    {% else %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>
                                            Non
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <small class="text-muted">
                                        {% if auth.allowed_at %}
                                            {{ auth.allowed_at|date('d/m/Y H:i') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </small>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="bi bi-shield-check text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2 mb-0">Aucune autorisation récente.</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-refresh every 30 seconds
    setInterval(function() {
        if (document.visibilityState === 'visible') {
            location.reload();
        }
    }, 30000);
    
    // Add tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>
{% endblock %}