# Application Configuration
APP_NAME="QR Attendance System"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=UTC

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=school_mvp
DB_USER=root
DB_PASS=

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=logs/app.log
LOG_MAX_FILES=30

# Security Configuration
CSRF_PROTECTION=true
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# QR Code Configuration
QR_SIZE=300
QR_MARGIN=10
QR_OUTPUT_DIR=assets/qr

# Attendance Configuration
DEFAULT_LATE_MINUTES=10
MAX_SCAN_WINDOW_HOURS=2